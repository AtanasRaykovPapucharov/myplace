extends common/layout

block head-block
	.head-up.item-flex-1 
		h2 BLOG
			a(href='#/addnew') ADD NEW

block title-block
	.title.collection.item-flex-3
		h2 ALL

block aside-block
	each tag in tags
		.tag
			a(href='/')=tag

block main-content
	.content-info.item-flex-3
		.posts-container
			each post in blog
				a.post(href='/')
					img.down-5(src=post.img, alt='image', width='65%')
					.content-post.up-15
						h4=post.title
